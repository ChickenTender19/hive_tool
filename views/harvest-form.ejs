<%- include("partials/header")%>
  <%- include("partials/navbar")%>

  <section>
    <div class="container" style="max-width: 500px">
      <div class="card text-michgold text-center mt-2 mb-5" style="max-width: 90vw">
        <%- include("partials/title")%>

        <!-- Forms -->

        <form action="/new-harvest" method="post" id="harvest-form">
          <select name="harvestType" id="harvestType" class="form-select fs-5  text-center bg-inputgrey border-3 border-michgold rounded-4 opacity-50 fw-bold" aria-label="select example">
            <option   selected disabled>Select Harvest Type</option>
              <option value="Honey">Honey</option>
              <option class="" value="Wax">Wax</option>
              
            </select>
            <label for="harvestAmount"
             class="mt-3">Amount</label
              >
            <div class=" m-3 fs-3 fw-semibold mb-3 d-flex justify-content-between">
            <input
              type="number"
              class="form-control fs-5 bg-inputgrey border-3 me-3 text-end border-michgold rounded-4 opacity-50 fw-bold"
              id="harvestAmount"
              name="harvestAmount"
            />
            
            <h2 for="" class=" mt-2">Lbs</h2>
          </div>
          <label for="harvestDate" class="form-label fs-3 fw-semibold mb-3">Date</label>
              <input
                type="date"
                class="form-control text-center bg-inputgrey border-3 border-michgold rounded-4 opacity-50 fw-bold"
                id="harvestDate"
                name="harvestDate"
              />
        </form>
        <!-- Form end -->

       

      <div
        class="d-flex justify-content-around  mt-5"
      >
       
        <button
          type="submit"
          form="harvest-form"
          class="btn px-5 btn-michgold btn-gold fw-bold rounded-pill"
        >
          ADD
        </button>
      </div>
    </div>
  </section>
  <%- include("partials/footer")%>

</body>
