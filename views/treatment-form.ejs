<%- include("partials/header")%>
  <%- include("partials/navbar")%>

  <section>
    <div class="container" style="max-width: 500px">
      <div class="card text-michgold text-center mt-2 mb-5" style="max-width: 90vw">
        <%- include("partials/title")%>

        <!-- Forms -->

        <form action="/new-treatment" method="post" id="treatment-form">
          <div class="m-3 fs-3 mt-0 fw-semibold">
            <label for="hiveNumber" class="form-label"
              >Hive Number</label
            >
            <input
              type="number"
              class="form-control text-center bg-inputgrey border-3 border-michgold rounded-4 opacity-50 fw-bold"
              name="hiveNumber"
              aria-describedby="hiveNumber"
            />
          </div>
          <div class="m-3 mt-0 fs-3 fw-semibold">
            <label for="treatment" class="form-label">Treatment</label>
              <select name="treatment" id="treatment" class="form-select text-center bg-inputgrey border-3 border-michgold rounded-4 opacity-50 fw-bold"" aria-label="select example">
                <option   selected disabled>Select Treatment</option>
                  <option value="Oxalic Acid">Oxalic Acid</option>
                  <option value="Formic Acid">Formic Acid</option>
                  <option value="Apivar">Apivar</option>
                  <option value="Super DFM">Super DFM</option>
                </select>
          </div>
          <div class="m-3 fs-3 mt-0 fw-semibold">
            <label for="treatmentDate" class="form-label">Date</label>
                <input
                  type="date"
                  class="form-control text-center bg-inputgrey border-3 border-michgold rounded-4 opacity-50 fw-bold"
                  id="treatmentDate"
                  name="treatmentDate"
            
                />
          </div>
          
        </form>
        <!-- Form end -->

       

      <div
        class="d-flex justify-content-around  mb-3"
      >
        
        <button
          type="submit"
          form="treatment-form"
          class="btn px-5 btn-michgold btn-gold fw-bold rounded-pill"
        >
          ADD
        </button>
      </div>
    </div>
  </section>
  <%- include("partials/footer")%>

</body>
