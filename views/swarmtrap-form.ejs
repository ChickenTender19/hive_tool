<%- include("partials/header")%>
  <%- include("partials/navbar")%>

  <section>
    <div class="container" style="max-width: 500px">
      <div class="card text-michgold text-center mt-2 mb-5" style="max-width: 90vw">
        <%- include("partials/title")%>

        <!-- Forms -->

        <form action="/new-swarm" method="post" id="swarm-form">
          <div class=" m-3 fs-3 mt-0 fw-semibold">
            <label for="swarmNumber" class="form-label">Trap Number</label>
            <input
              type="number"
              class="form-control text-center bg-inputgrey border-3 border-michgold rounded-4 opacity-50 fw-bold"
              id="swarmNumber"
              aria-describedby="swarmNumber"
              name="swarmNumber"
            />
          </div>
          <div class="m-3 fs-3 mt-0 fw-semibold">
            <label for="location" class="form-label" rows="1">Location</label>
            <textarea class="text-center form-control bg-inputgrey border-3 border-michgold rounded-4 opacity-50 fw-bold" 
            id="location" 
            name="location"  
            rows="1"></textarea>
          </div>
          <div class="m-3 fs-3 mt-0 fw-semibold">
            <label for="swarmDate" class="form-label">Date</label>
                <input
                  type="date"
                  class="form-control text-center bg-inputgrey border-3 border-michgold rounded-4 opacity-50 fw-bold "
                  id="swarmDate"
                  name="swarmDate"
                />
          </div>
        </form>
        <!-- Form end -->

      <div class="d-flex justify-content-around  mb-3">        
        <button
          type="submit"
          form="swarm-form"
          class="btn px-5 btn-michgold btn-gold fw-bold rounded-pill "
        >
          ADD
        </button>
      </div>
    </div>
  </section>

  <%- include("partials/footer")%>

</body>
