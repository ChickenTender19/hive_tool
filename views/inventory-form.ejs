<%- include("partials/header")%>
  <%- include("partials/navbar")%>

  <section>
    <div class="container" style="max-width: 700px">
      <div class="card text-michgold text-center mt-2 mb-5">
        <%- include("partials/title")%>

        <!-- Forms -->

        <form action="/new-inventory" method="post" id="inventory-form">
          <div class="m-3 fs-3 mt-0 fw-semibold">
            <label for="inventoryType" class="form-label">Equipment Name</label>
            <input
              type="text"
              class="form-control bg-inputgrey border-3 border-michgold rounded-4 opacity-50 fw-bold text-center"
              id="inventoryType"
              name="inventoryType"
            />
          </div>
          <div class="m-3 fs-3 mt-0 fw-semibold">
            <label for="inventoryAmount" class="form-label">Quantity</label>
            <input
              type="number"
              class="form-control text-center bg-inputgrey border-3 border-michgold rounded-4 opacity-50 fw-bold"
              id="inventoryAmount"
              name="inventoryAmount"
            />
          </div>          
        </form>
        <!-- Form end -->

      <div
        class="d-flex justify-content-around  mb-3"
      >     
        <button
          type="submit"
          form="inventory-form"
          class="btn px-5 btn-michgold btn-gold fw-bold rounded-pill"
        >
          ADD
        </button>
      </div>
    </div>
  </section>
  
  <%- include("partials/footer")%>

</body>
