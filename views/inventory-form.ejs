<%- include("partials/header")%>
  <%- include("partials/navbar")%>

  <section>
    <div class="container" style="max-width: 500px">
      <div class="card text-michgold text-center mt-2 mb-5" style="max-width: 90vw">
        <%- include("partials/title")%>

        <!-- Forms -->

        <form action="/new-inventory" method="post" id="inventory-form">
          <div class=" text-center m-3 fs-3 fw-semibold">
            <label for="inventoryType" class="form-label text-center mb-3">Equipment Name</label>
            <input
              type="text"
              class="form-control bg-inputgrey border-3 border-michgold rounded-4 opacity-50 fw-bold text-center"
              id="inventoryType"
              name="inventoryType"
            />
          </div>
          <div class="text-center m-3 fs-3 fw-semibold ">
            <label for="inventoryAmount" class="form-label">Quantity</label>
            <input
              type="number"
              class="form-control text-center bg-inputgrey border-3 border-michgold rounded-4 opacity-50 fw-bold"
              id="inventoryAmount"
              name="inventoryAmount"
            />
          </div>
          <label for="inventoryDate" class="form-label fs-3 fw-semibold my-3">Date</label>
              <input
                type="date"
                class="form-control text-center bg-inputgrey border-3 border-michgold rounded-4 opacity-50 fw-bold"
                id="inventoryDate"
                name="inventoryDate"
                
              />
          
        </form>
        <!-- Form end -->

       

      <div
        class="d-flex justify-content-around  mt-5"
      >
       
        <button
          type="submit"
          form="inventory-form"
          class="btn px-5 btn-michgold btn-gold fw-bold rounded-pill"
        >
          ADD
        </button>
      </div>
    </div>
  </section>
  <%- include("partials/footer")%>

</body>
