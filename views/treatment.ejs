<%- include("partials/header")%>
  <%- include("partials/navbar")%>

    <div class="container text-center text-michgold ">

      <%- include("partials/title")%>

        <!-- Treatment Card -->
      <div class="row row-cols-1 row-cols-lg-3 g-2">

      <% data.forEach((treatment) => {%>
