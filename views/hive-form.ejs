


<%- include("partials/header")%>
  <%- include("partials/navbar")%>

  <section>
    <div class="container" style="max-width: 700px">
      <div  class="card text-michgold text-center mt-2 mb-5"
       
      >
       
      <%- include("partials/title")%>

        <!-- Forms -->

        <form action="/new-hive" method="post" id="hive-form">
          <div class="m-3 fs-3 mt-0 fw-semibold">
            <label for="hiveNumber" class="form-label"
              >Hive Number</label
            >
            <input
              type="number"
              class="form-control text-center bg-inputgrey border-3 border-michgold rounded-4 opacity-50 fw-bold"
              id="hiveNumber"
              name="hiveNumber"
              aria-describedby="hiveNumber"
            />
          </div>
          <div class="m-3 fs-3 mt-0 fw-semibold text-center">
              <label for="breed" class="form-label mb-3">Breed</label>
              <select name="breed" id="breed" class="form-select mb-2 text-center bg-inputgrey border-3 border-michgold rounded-4 opacity-50 fw-bold" >
                <option  class="text-center" selected disabled>Breed</option>
                  <option value="Unknown">Unknown</option>
                  <option value="Italian">Italian</option>
                  <option value="Carniolan">Carniolan</option>
                  <option value="Buckfast">Buckfast</option>
                  <option value="Russian">Russian</option>
                  <option value="German">German</option>
                  <option value="Caucasian">Caucasian</option>
                </select>
            <label for="hiveDate" class="form-label fs-3 fw-semibold my-3">Date</label>
            <input
              type="date"
              class="form-control text-center bg-inputgrey border-3 border-michgold rounded-4 opacity-50 fw-bold"
              id="hiveDate"
              name="hiveDate"
            />
          </div>
          <!-- Form end -->

          <!-- Hive Range -->
          <label
            for="hiveStrength"
            class="form-label my-1 fs-3 fw-semibold"
            >Hive Strength</label
          >
          <div class="d-flex justify-content-evenly mb-3">
            <p class="mt-3" style="flex: 1;">0</p>
            
            <input
              type="range"
              class="m-3 custom-range bg-michgold"
              min="0"
              max="100"
              id="hiveStrength"
              name="hiveStrength"
              style="min-width: 60%; flex: 3;"
            />
          
            <div style="flex: 1;">
              <span id="sliderValue" class="mt-3">50</span>
            </div>
          </div>
          
        </form>
        <div class="d-flex justify-content-around mb-3">
          <button
            type="submit"
            form="hive-form"
            class="btn px-5 btn-michgold btn-gold fw-bold rounded-pill"
          >
            ADD
          </button>
        </div>
      </div>
    </div>
  </section>
  <%- include("partials/footer")%>

  <script>
    initSlider();
  </script>
</body>










