<%- include("partials/header")%>
  <%- include("partials/navbar")%>
    <div class="container text-center text-michgold mt-2">
      <%- include("partials/title")%>

      <!-- Feeding Card -->

        <div class="row row-cols-1 row-cols-lg-3 g-2">
          <!-- Place card here -->
          <% data.forEach((feed) => {%>
            <div class="col gy-4">
              <div class="container px-2 pop" style="max-width: 500px">
                <div class="card text-michgold border-michgold rounded-5 border-3">
                  <div class="card-body d-flex mx-3 justify-content-between">
                    <div class="text-michgold">
                      <i class="fa-solid fa-utensils fa-2xl" style="color: #ffcb05;"></i>
                    </div>
                    <span class="fs-3 fw-bold text-center"><%= feed.feeding %></span>
                    <div class="mt-1"><%= feed.feedDate %></div>
                  </div>
                  <div class="d-flex justify-content-between mx-3 mb-2">
                    <form action="/feed/delete/<%= feed.id %>?_method=DELETE" method="post">
                      <input type="hidden" name="_method"
                      value="DELETE">
                      <input type="submit" value="DELETE" name="" id="" class="btn rounded-5 btn-outline-danger">
                    </form>
                    <a
                      href="/feed/edit/<%= feed.id %>"
                      class="btn btn-outline-warning rounded-5 px-4"
                      style="max-width: 30vw"
                      >EDIT</a
                    >
                  </div>
                </div>
              </div>
            </div>
          <% }) %>
        

        </div> 
      
      <!-- Feeding Card End-->
      
      <div class="fixedBtn" >
        <a
        href="feeding-form"
        type="button"
        class="btn btn-lg px-4  btn-michgold btn-gold rounded-pill "
        style="
        position: fixed;
        left: 40%;
        top: 78%;
      ">
        ADD
        </a>
      </div>
    </div>
  
      <%- include("partials/footer")%>
      
    </body>
  </html>
