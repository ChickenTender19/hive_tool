<%- include("partials/header")%>
  <%- include("partials/navbar")%>

  <section>
    <div class="container" style="max-width: 500px">
      <div class="card text-michgold text-center mt-2 mb-5" style="max-width: 90vw">
        <div class="card-header">
          <h1>New Equipment</h1>
        </div>
        <div class="card-body">
          <div class="d-flex justify-content-evenly mt-5">
            <p class="card-text">üìç Fenton MI</p>
            <p class="card-text">56‚Ñâ üå§Ô∏è</p>
          </div>
        </div>

        <!-- Forms -->

        <form action="/inventory/update/<%= data.id %>?_method=PUT" method="post" id="edit-inventory-form">
          <input type="hidden" name="_method" value="PUT">
          <div class=" text-center m-3 fs-3 fw-semibold">
            <label for="inventoryType" class="form-label text-center mb-3"><%= data.inventoryType %></label>
            <input
              type="text"
              class="form-control bg-inputgrey border-3 text-center border-michgold rounded-4 opacity-50 fw-bold"
              id="inventoryType"
              name="inventoryType"
              value="<%= data.inventoryType %>"
            />
          </div>
          <div class="text-center m-3 fs-3 fw-semibold mb-5">
            <label for="inventoryAmount" class="form-label">Quantity</label>
            <input
              type="number"
              class="form-control text-center bg-inputgrey border-3 border-michgold rounded-4 opacity-50 fw-bold"
              id="inventoryAmount"
              name="inventoryAmount"
              value="<%= data.inventoryAmount %>"
            />
          </div>
          <label for="inventoryDate" class="form-label fs-3 fw-semibold my-3">Date</label>
              <input
                type="date"
                class="form-control text-center bg-inputgrey border-3 border-michgold rounded-4 opacity-50 fw-bold"
                id="inventoryDate"
                name="inventoryDate"
                value="<%= data.inventoryDate %>"
                
              />
          
        </form>
        <!-- Form end -->

       

      <div
        class="d-flex justify-content-around  mt-5"
      >
       
        <button
          type="submit"
          form="edit-inventory-form"
          class="btn px-5 btn-michgold btn-gold fw-bold rounded-pill"
        >
          ADD
        </button>
      </div>
    </div>
  </section>
  <%- include("partials/footer")%>

</body>
