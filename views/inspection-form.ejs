<%- include("partials/header")%>
  <%- include("partials/navbar")%>
  

    <section>
        <div class="container" style="max-width: 500px;">
            <div class="card text-michgold text-center mt-2" style="max-width: 90vw;">
              <%- include("partials/title")%>
              
                <form action="/new-inspection" method="post" id="inspection-form">
                  <div class="text-center m-3">
                    <label for="hiveNumber" class="form-label mb-3 fs-3 fw-semibold"
                      >Hive Number</label
                    >
                    <input
                      type="number"
                      class="form-control text-center bg-inputgrey border-3 border-michgold rounded-4 opacity-50 fw-bold"
                      id="hiveNumber"
                      name="hiveNumber"
                      aria-describedby="hiveNumber"
                    />
                  </div>
                      <label for="temperament" class="text-center mb-3 fw-semibold fs-3">Temperament</label>
                      <div class="d-flex justify-content-evenly mb-3">
                          <input type="radio" class="btn-check" name="temperament" id="calm" value="✓ Calm" autocomplete="off">
                          <label class="btn temperBtn" for="calm">Calm</label>
                  
                          <input type="radio" class="btn-check" name="temperament" id="aggressive" value="⚠️ Aggressive" autocomplete="off">
                          <label class="btn temperBtn" for="aggressive">Aggressive</label>
                  
                          <input type="radio" class="btn-check" name="temperament" id="active" value="✓ Active" autocomplete="off">
                          <label class="btn temperBtn" for="active">Active</label>
                      </div>
                  
                  
                  
                  <div class="text-center mt-3 mx-3 fw-semibold fs-3">
                      <p>Hive Strength</p>
                  </div>
                  <div class="d-flex justify-content-evenly">
                    <p class="mt-3">0</p>
                    <input
                      type="range"
                      class="m-3 custom-range bg-michgold"
                      min="0"
                      max="100"
                      id="strength"
                      name="strength"
                      style="min-width: 17rem"
                    />
                    <p class="mt-3">100%</p>
                  </div>
                  <!-- <div class="mt-4 d-flex flex-column"> -->
                    <div class="form-check d-flex justify-content-between  ">
                      <label class=" fs-2 mb-0" for="queen">
                        Queen
                      </label>
                      <input class="form-check-input btn-lg my-3" type="checkbox" value="✓ Queen Spotted" id="queen" name="queen">
                    </div>
                    <div class="form-check d-flex justify-content-between mb-2 ">
                      <p class="form-check-label fs-2 mb-1" for="queenCell">
                        Queen Cells
                      </p>
                      <input class="form-check-input btn-lg my-3" type="checkbox" value="⚠️ Queen Cells" id="queenCell" name="queenCell">
                    </div>
                    <div class="form-check d-flex justify-content-between mb-2 ">
                      <p class="form-check-label fs-2 mb-1" for="eggs">
                        Eggs
                      </p>
                      <input class="form-check-input btn-lg my-3" type="checkbox" value="✓ Eggs Spotted" id="eggs" name="eggs">
                    </div>
                      <select name="brood" id="brood" class="form-select mb-2 text-center bg-inputgrey border-3 border-michgold rounded-4 opacity-50 fw-bold" >
                        <option   selected disabled>Brood</option>
                          <option value="✓ Normal Brood">Normal</option>
                          <option value="✓ Spotty Brood">Spotty</option>
                          <option value="✓ Compact Brood">Compact</option>
                        </select>
                  
                      <select name="disease" id="disease" class="form-select mb-2 text-center bg-inputgrey border-3 border-michgold rounded-4 opacity-50 fw-bold" >
                        <option   selected disabled>Disease</option>
                          <option value="No Diseases">No Diseases</option>
                          <option value="⚠️ Varroa Mites">Varroa Mites</option>
                          <option value="⚠️ Chalkbrood">Chalkbrood</option>
                          <option value="⚠️ Stonebrood">Stonebrood</option>
                          <option value="⚠️ American Foulbrood">American Foulbrood</option>
                          <option value="⚠️ European Foulbrood">European Foulbrood</option>
                        </select>
                  
                      <select name="pests" id="pests" class="form-select mb-2  text-center bg-inputgrey border-3 border-michgold rounded-4 opacity-50 fw-bold" >
                        <option   selected disabled>Pests</option>
                          <option value="No Pests">No Pests</option>
                          <option value="⚠️ Wax moths">Wax Moths</option>
                          <option value="⚠️ Mice">Mice</option>
                          <option value="⚠️ Hive Beetle">Hive Beetle</option>
                          <option value="⚠️ Ants">Ants</option>
                        </select>
                  <!-- </div> -->
                  <label for="inspectionDate" class="form-label fs-3 fw-semibold my-3">Date</label>
                  <input
                    type="date"
                    class="form-control text-center bg-inputgrey border-3 border-michgold rounded-4 opacity-50 fw-bold"
                    id="inspectionDate"
                    name="inspectionDate"
                  />
                </form>

            </div>
              <div class="d-flex justify-content-around mt-3">
                  <button
                      type="submit"
                      form="inspection-form"
                      class="btn px-5 btn-michgold btn-gold fw-bold rounded-pill"
                      >
                      ADD
                  </button>
              </div> 
        </div>
    </section>


    
    
    
    
    
    <%- include("partials/footer")%>

    </body>
  </html>
